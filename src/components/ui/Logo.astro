---
interface Props {
  variant?: 'full' | 'icon' | 'wordmark';
  class?: string;
}

const { variant = 'full', class: className = '' } = Astro.props;
---

{variant === 'icon' && (
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class={className} aria-label="Bushbound icon">
    <!-- Shield/badge shape -->
    <path d="M24 2 L44 12 L44 28 C44 38 34 46 24 46 C14 46 4 38 4 28 L4 12 Z" fill="currentColor" class="text-primary"/>
    <g transform="translate(8, 10)">
      <!-- Treeline / bush silhouette -->
      <path d="M0 24 L3 18 L5 22 L8 14 L10 20 L13 16 L16 10 L19 16 L22 20 L24 14 L27 22 L29 18 L32 24 Z" fill="var(--color-sand, #C4A882)" opacity="0.3"/>
      <!-- Vehicle silhouette heading right -->
      <path d="M5 21 L5 16 L9 16 L10.5 12 L15 11 L23 11 L25.5 12.5 L28 16 L28 21" fill="none" stroke="var(--color-sand, #C4A882)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
      <!-- Roof rack bars -->
      <line x1="12" y1="11" x2="21" y2="11" stroke="var(--color-sand, #C4A882)" stroke-width="1.2" stroke-linecap="round"/>
      <!-- Wheels -->
      <circle cx="10" cy="21" r="3" fill="currentColor" class="text-primary" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
      <circle cx="24" cy="21" r="3" fill="currentColor" class="text-primary" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
      <!-- Wheel hubs -->
      <circle cx="10" cy="21" r="0.8" fill="var(--color-sand, #C4A882)"/>
      <circle cx="24" cy="21" r="0.8" fill="var(--color-sand, #C4A882)"/>
      <!-- Windows -->
      <path d="M11 12.5 L14.5 12.5 L14.5 15.5 L10 15.5 Z" fill="var(--color-sand, #C4A882)" opacity="0.25"/>
      <path d="M15.5 12.5 L22 12.5 L24.5 15.5 L15.5 15.5 Z" fill="var(--color-sand, #C4A882)" opacity="0.25"/>
    </g>
  </svg>
)}

{variant === 'wordmark' && (
  <span class:list={['font-heading font-bold tracking-wider uppercase', className]} aria-label="Bushbound">
    BUSHBOUND
  </span>
)}

{variant === 'full' && (
  <div class:list={['flex items-center gap-3', className]}>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="h-10 w-10 shrink-0" aria-label="Bushbound icon">
      <path d="M24 2 L44 12 L44 28 C44 38 34 46 24 46 C14 46 4 38 4 28 L4 12 Z" fill="currentColor" class="text-primary"/>
      <g transform="translate(8, 10)">
        <path d="M0 24 L3 18 L5 22 L8 14 L10 20 L13 16 L16 10 L19 16 L22 20 L24 14 L27 22 L29 18 L32 24 Z" fill="var(--color-sand, #C4A882)" opacity="0.3"/>
        <path d="M5 21 L5 16 L9 16 L10.5 12 L15 11 L23 11 L25.5 12.5 L28 16 L28 21" fill="none" stroke="var(--color-sand, #C4A882)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
        <line x1="12" y1="11" x2="21" y2="11" stroke="var(--color-sand, #C4A882)" stroke-width="1.2" stroke-linecap="round"/>
        <circle cx="10" cy="21" r="3" fill="currentColor" class="text-primary" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
        <circle cx="24" cy="21" r="3" fill="currentColor" class="text-primary" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
        <circle cx="10" cy="21" r="0.8" fill="var(--color-sand, #C4A882)"/>
        <circle cx="24" cy="21" r="0.8" fill="var(--color-sand, #C4A882)"/>
        <path d="M11 12.5 L14.5 12.5 L14.5 15.5 L10 15.5 Z" fill="var(--color-sand, #C4A882)" opacity="0.25"/>
        <path d="M15.5 12.5 L22 12.5 L24.5 15.5 L15.5 15.5 Z" fill="var(--color-sand, #C4A882)" opacity="0.25"/>
      </g>
    </svg>
    <span class="font-heading font-bold tracking-wider uppercase text-xl">BUSHBOUND</span>
  </div>
)}
