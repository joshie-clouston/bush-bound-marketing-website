---
interface Props {
  variant?: 'full' | 'icon' | 'wordmark';
  class?: string;
}

const { variant = 'full', class: className = '' } = Astro.props;
---

{variant === 'icon' && (
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class={className} aria-label="Bushbound icon">
    <!-- Shield -->
    <path d="M8 2 H40 C42.2 2 44 3.8 44 6 V28 C44 37.5 35 46 24 46 C13 46 4 37.5 4 28 V6 C4 3.8 5.8 2 8 2 Z" fill="currentColor"/>
    <!-- Mountain peaks -->
    <path d="M4 26 L15 14 L20 21 L28 7 L40 20 L44 26 Z" fill="var(--color-sand, #C4A882)" opacity="0.15"/>
    <!-- Vehicle body -->
    <path d="M9 35 V29 L13 29 L15.5 24.5 L30.5 24.5 L34 27 L38 29 L39 29 V35" fill="none" stroke="var(--color-sand, #C4A882)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
    <!-- Roof rack -->
    <line x1="16.5" y1="23.5" x2="29.5" y2="23.5" stroke="var(--color-sand, #C4A882)" stroke-width="1" stroke-linecap="round"/>
    <!-- Wheels -->
    <circle cx="15" cy="35" r="3.5" fill="currentColor" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
    <circle cx="33" cy="35" r="3.5" fill="currentColor" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
    <!-- Hubs -->
    <circle cx="15" cy="35" r="1" fill="var(--color-sand, #C4A882)"/>
    <circle cx="33" cy="35" r="1" fill="var(--color-sand, #C4A882)"/>
  </svg>
)}

{variant === 'wordmark' && (
  <span class:list={['font-heading font-bold tracking-wider uppercase', className]} aria-label="Bushbound">
    BUSHBOUND
  </span>
)}

{variant === 'full' && (
  <div class:list={['flex items-center gap-3', className]}>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="h-10 w-10 shrink-0" aria-label="Bushbound icon">
      <path d="M8 2 H40 C42.2 2 44 3.8 44 6 V28 C44 37.5 35 46 24 46 C13 46 4 37.5 4 28 V6 C4 3.8 5.8 2 8 2 Z" fill="currentColor"/>
      <path d="M4 26 L15 14 L20 21 L28 7 L40 20 L44 26 Z" fill="var(--color-sand, #C4A882)" opacity="0.15"/>
      <path d="M9 35 V29 L13 29 L15.5 24.5 L30.5 24.5 L34 27 L38 29 L39 29 V35" fill="none" stroke="var(--color-sand, #C4A882)" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
      <line x1="16.5" y1="23.5" x2="29.5" y2="23.5" stroke="var(--color-sand, #C4A882)" stroke-width="1" stroke-linecap="round"/>
      <circle cx="15" cy="35" r="3.5" fill="currentColor" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
      <circle cx="33" cy="35" r="3.5" fill="currentColor" stroke="var(--color-sand, #C4A882)" stroke-width="1.8"/>
      <circle cx="15" cy="35" r="1" fill="var(--color-sand, #C4A882)"/>
      <circle cx="33" cy="35" r="1" fill="var(--color-sand, #C4A882)"/>
    </svg>
    <span class="font-heading font-bold tracking-wider uppercase text-xl">BUSHBOUND</span>
  </div>
)}
