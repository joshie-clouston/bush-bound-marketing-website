export const prerender = true;

import BaseLayout from '@/layouts/BaseLayout.astro';

const reviews = [
  { name: "Joshua C.", vehicle: "Troopy", text: "Highly recommend going with Bushbound to just get it done right the first time. Absolutely stoked!" },
  { name: "Brock C.", vehicle: "100 Series", text: "Super high attention to detail, quick turn around time, and clear communication throughout." },
  { name: "Luke W.", vehicle: "VW Transporter", text: "Absolutely nailed it. Couldn't have asked for a better build. Attention to detail is what sets them apart." },
  { name: "Mick D.", vehicle: "80 Series", text: "Deadset luke is a legend. Workmanship is top quality and materials he used are top notch!" },
  { name: "Katrina S.", vehicle: "VW Multivan", text: "Luke did a great job. Very happy with it. Plenty of storage. Can't wait to get on the road." },
  { name: "Jacob H.", vehicle: "76 Series", text: "Super creative and full of solutions to problems before they happen! Everything fit perfectly." },
  { name: "Jack R.", vehicle: "Prado 150", text: "Luke is an absolute legend and put together the perfect install on my Prado." },
  { name: "Norman H.", vehicle: "Troopy", text: "Brilliant job and so helpful with the planning of this perfect build. Highly recommended." },
  { name: "Russell H.", vehicle: "Silverado", text: "Excellent work, precisely neat and very well presented." },
