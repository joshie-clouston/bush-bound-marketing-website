const starPath = "M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z";
---

<BaseLayout title="Custom 4WD & Van Fit-Outs Gold Coast | Expedition Vehicle Builds | Bushbound" description="Custom 4WD and van fit-outs on the Gold Coast, QLD. Designed in 3D, CNC-cut from premium plywood to millimetre precision, and professionally installed. Cabinetry, water systems and off-grid power. Get a free quote.">

  <!-- HERO -->
  <section id="hero" class="relative min-h-[calc(100vh-6.25rem)] min-h-[calc(100dvh-6.25rem)] bg-charcoal text-stone-light overflow-hidden">
    <!-- Shooting stars canvas -->
    <canvas id="vj-shooting-stars" class="absolute inset-0 w-full h-full z-[1] pointer-events-none"></canvas>

    <!-- Vehicle journey SVG scene -->
    <svg id="vehicle-scene" class="absolute inset-0 w-full h-full" viewBox="0 0 1440 810" preserveAspectRatio="xMidYMax slice" xmlns="http://www.w3.org/2000/svg">
      <!-- Ground -->
      <rect id="vj-ground" x="0" y="740" width="1440" height="190" fill="#2D4A3E" opacity="0" />

      <!-- Mountains (back layer) -->
      <path id="vj-mountain-1" d="M-20 740 C80 720 140 600 220 520 C270 465 310 530 380 580 C430 610 470 495 550 435 C600 400 650 460 730 520 C790 560 830 475 910 425 C970 390 1010 440 1090 500 C1150 540 1190 460 1270 420 C1330 390 1380 430 1460 475 L1460 740 Z" fill="#1E332B" opacity="0" />

      <!-- Back mountain trees (distant, smaller, between mountain layers) -->
      <g id="vj-trees-back" opacity="0">
        <g class="tree" transform="translate(220, 525)"><polygon points="-8,0 0,-25 8,0" fill="#2E4F40" /><polygon points="-6,-13 0,-33 6,-13" fill="#3A5E4E" /></g>
        <g class="tree" transform="translate(295, 529)"><polygon points="-9,0 0,-30 9,0" fill="#2E4F40" /><polygon points="-7,-15 0,-38 7,-15" fill="#3A5E4E" /><polygon points="-5,-26 0,-44 5,-26" fill="#4A7060" /></g>
        <g class="tree" transform="translate(1175, 485)"><polygon points="-9,0 0,-30 9,0" fill="#2E4F40" /><polygon points="-7,-15 0,-38 7,-15" fill="#3A5E4E" /><polygon points="-5,-26 0,-44 5,-26" fill="#4A7060" /></g>
      </g>

      <!-- Mountains (front layer) -->
      <path id="vj-mountain-2" d="M-20 740 C60 730 110 660 200 610 C250 580 300 620 380 640 C440 655 480 565 560 525 C620 495 660 545 740 585 C800 615 840 535 920 500 C980 475 1020 520 1100 560 C1160 585 1200 515 1280 485 C1340 465 1390 500 1460 545 L1460 740 Z" fill="#2D4A3E" opacity="0" />

      <!-- Drive path (hidden — follows mountain-2 terrain, extended off-screen) -->
      <path id="vj-drive-path" d="M-100 740 L-20 740 C60 730 110 660 200 610 C250 580 300 620 380 640 C440 655 480 565 560 525 C620 495 660 545 740 585 C800 615 840 535 920 500 C980 475 1020 520 1100 560 C1160 585 1200 515 1280 485 C1340 465 1390 500 1460 545 L1560 545" fill="none" stroke="none" />

      <!-- 4WD Vehicle (small, terrain-following) — rendered BEFORE trees so trees overlap -->
      <g id="vj-vehicle-container" opacity="0">
        <g id="vj-vehicle" transform="scale(0.4) translate(-80, -75)">
          <ellipse cx="80" cy="68" rx="78" ry="5" fill="#000" opacity="0.25" />
          <path d="M14 56 Q8 56 8 50 L6 0 Q6 -8 14 -8 L92 -8 L108 12 L146 14 Q152 14 152 20 L152 50 Q152 56 146 56 L140 56 Q116 28 92 56 L66 56 Q42 28 18 56 Z" fill="#C4A882" />
          <rect x="12" y="-13" width="82" height="4" rx="1" fill="#A68B64" />
          <rect x="14" y="-4" width="12" height="14" rx="1" fill="#1A1A1A" opacity="0.5" />
          <rect x="30" y="-4" width="28" height="14" rx="1" fill="#1A1A1A" opacity="0.5" />
          <path d="M62 -4 L90 -4 L104 12 L62 12 Z" fill="#1A1A1A" opacity="0.5" />
          <line x1="28" y1="-4" x2="28" y2="48" stroke="#B89B75" stroke-width="1" opacity="0.5" />
          <line x1="60" y1="-4" x2="60" y2="48" stroke="#B89B75" stroke-width="1" opacity="0.5" />
          <rect x="40" y="16" width="5" height="2" rx="1" fill="#A68B64" />
          <rect x="75" y="16" width="5" height="2" rx="1" fill="#A68B64" />
          <rect x="152" y="14" width="6" height="42" rx="2" fill="#A68B64" />
          <rect x="5" y="14" width="3" height="8" rx="1" fill="#B91C1C" opacity="0.5" />
          <g id="vj-wheel-rear">
            <circle cx="42" cy="60" r="24" fill="#1A1A1A" /><circle cx="42" cy="60" r="16" fill="#2A2A2A" /><circle cx="42" cy="60" r="5.5" fill="#C4A882" />
            <line x1="42" y1="42" x2="42" y2="49" stroke="#3a3a3a" stroke-width="1.5" /><line x1="42" y1="71" x2="42" y2="78" stroke="#3a3a3a" stroke-width="1.5" />
            <line x1="25" y1="60" x2="32" y2="60" stroke="#3a3a3a" stroke-width="1.5" /><line x1="52" y1="60" x2="59" y2="60" stroke="#3a3a3a" stroke-width="1.5" />
          </g>
          <g id="vj-wheel-front">
            <circle cx="116" cy="60" r="24" fill="#1A1A1A" /><circle cx="116" cy="60" r="16" fill="#2A2A2A" /><circle cx="116" cy="60" r="5.5" fill="#C4A882" />
            <line x1="116" y1="42" x2="116" y2="49" stroke="#3a3a3a" stroke-width="1.5" /><line x1="116" y1="71" x2="116" y2="78" stroke="#3a3a3a" stroke-width="1.5" />
            <line x1="99" y1="60" x2="106" y2="60" stroke="#3a3a3a" stroke-width="1.5" /><line x1="126" y1="60" x2="133" y2="60" stroke="#3a3a3a" stroke-width="1.5" />
          </g>
        </g>
      </g>

      <!-- Front mountain trees (on the mountain surface) -->
      <!-- Center zone (x≈400-1000) cleared so trees don't overlap hero text -->
      <g id="vj-trees-front" opacity="0">
        <g class="tree" transform="translate(200, 615)"><polygon points="-14,0 0,-45 14,0" fill="#3D6A56" /><polygon points="-11,-22 0,-58 11,-22" fill="#4A7A66" /></g>
        <g class="tree" transform="translate(279, 611)"><polygon points="-16,0 0,-55 16,0" fill="#3D6A56" /><polygon points="-13,-28 0,-72 13,-28" fill="#4A7A66" /><polygon points="-10,-48 0,-82 10,-48" fill="#5C8A76" /></g>
        <g class="tree" transform="translate(380, 645)"><polygon points="-12,0 0,-40 12,0" fill="#3D6A56" /><polygon points="-9,-20 0,-52 9,-20" fill="#4A7A66" /></g>
        <g class="tree" transform="translate(1010, 519)"><polygon points="-12,0 0,-40 12,0" fill="#3D6A56" /><polygon points="-9,-20 0,-52 9,-20" fill="#4A7A66" /></g>
        <g class="tree" transform="translate(1100, 565)"><polygon points="-15,0 0,-50 15,0" fill="#3D6A56" /><polygon points="-12,-25 0,-65 12,-25" fill="#4A7A66" /><polygon points="-9,-44 0,-75 9,-44" fill="#5C8A76" /></g>
        <g class="tree" transform="translate(1280, 490)"><polygon points="-14,0 0,-48 14,0" fill="#3D6A56" /><polygon points="-11,-24 0,-62 11,-24" fill="#4A7A66" /><polygon points="-8,-42 0,-72 8,-42" fill="#5C8A76" /></g>
      </g>

      <!-- Stars -->
      <g id="vj-stars" opacity="0">
        <!-- Bright stars -->
        <circle cx="120" cy="80" r="1.5" fill="#E8E0D6" /><circle cx="350" cy="120" r="1.2" fill="#E8E0D6" />
        <circle cx="580" cy="60" r="1.5" fill="#E8E0D6" /><circle cx="750" cy="150" r="1" fill="#E8E0D6" />
        <circle cx="950" cy="90" r="1.5" fill="#E8E0D6" /><circle cx="1150" cy="130" r="1.2" fill="#E8E0D6" />
        <circle cx="1350" cy="70" r="1.5" fill="#E8E0D6" />
        <!-- Medium stars -->
        <circle cx="60" cy="140" r="1" fill="#D4CCC2" /><circle cx="230" cy="45" r="1.2" fill="#D4CCC2" />
        <circle cx="420" cy="180" r="1" fill="#D4CCC2" /><circle cx="500" cy="30" r="1.3" fill="#E8E0D6" />
        <circle cx="680" cy="95" r="1" fill="#D4CCC2" /><circle cx="840" cy="45" r="1.2" fill="#E8E0D6" />
        <circle cx="1020" cy="160" r="1" fill="#D4CCC2" /><circle cx="1250" cy="55" r="1.3" fill="#E8E0D6" />
        <circle cx="1400" cy="140" r="1" fill="#D4CCC2" />
        <!-- Dim stars -->
        <circle cx="180" cy="180" r="0.8" fill="#C4A882" opacity="0.5" /><circle cx="310" cy="55" r="0.7" fill="#C4A882" opacity="0.5" />
        <circle cx="470" cy="105" r="0.8" fill="#C4A882" opacity="0.5" /><circle cx="620" cy="170" r="0.7" fill="#C4A882" opacity="0.5" />
        <circle cx="790" cy="35" r="0.8" fill="#C4A882" opacity="0.5" /><circle cx="890" cy="175" r="0.7" fill="#C4A882" opacity="0.5" />
        <circle cx="1080" cy="70" r="0.8" fill="#C4A882" opacity="0.5" /><circle cx="1200" cy="190" r="0.7" fill="#C4A882" opacity="0.5" />
        <circle cx="1320" cy="110" r="0.8" fill="#C4A882" opacity="0.5" />
      </g>
    </svg>

    <!-- Reduced motion fallback -->
    <div class="hidden motion-reduce:block absolute inset-0 bg-gradient-to-br from-primary-dark to-charcoal"></div>

    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 z-[2] pointer-events-none bg-charcoal/40"></div>

    <!-- Hero text overlay -->
    <div class="relative z-10 min-h-[calc(100vh-6.25rem)] min-h-[calc(100dvh-6.25rem)] flex flex-col items-center justify-start text-center px-6 pt-[18vh] sm:pt-[21vh]">
      <p class="text-sand font-medium text-sm uppercase tracking-widest mb-4">
        Lightweight Vehicle Fitouts
      </p>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight mb-6" style="text-shadow: 0 2px 20px rgba(0,0,0,0.4);">
        Built to take you<br />
        <span class="text-sand">further.</span>
      </h1>
      <p class="text-lg sm:text-xl text-stone/90 max-w-xl mx-auto mb-10">
        We fit out vans, 4WDs and Troop Carriers with storage, power and water — for those who want to explore this beautiful country on their own terms.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/quote"
          class="inline-flex items-center justify-center px-8 py-4 bg-sand text-charcoal font-bold text-base rounded-md hover:bg-sand-light transition-colors"
        >
          Get a Free Quote
        </a>
        <a
          href="#how-it-works"
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-stone-light/40 text-stone-light font-semibold text-base rounded-md bg-white/5 hover:border-sand hover:text-sand hover:bg-sand/10 transition-colors"
        >
          See How It Works
        </a>
      </div>

    </div>

    <!-- Social proof marquee -->
    <div class="absolute bottom-8 left-0 right-0 z-10 overflow-hidden pointer-events-none" style="-webkit-mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%); mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%);">
      <div class="review-marquee flex gap-6 w-max pointer-events-auto">
        {/* Render reviews twice for seamless loop */}
        {[...reviews, ...reviews].map((r) => (
        <div class="flex items-center gap-3 px-5 py-3 bg-white/8 backdrop-blur-sm rounded-lg border border-white/10 shrink-0">
          <div class="flex text-sand text-sm gap-0.5">
            {[1,2,3,4,5].map(() => (
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path d={starPath}/></svg>
            ))}
          </div>
          <span class="text-stone-light/90 text-sm">"{r.text}"</span>
          <span class="text-stone-light/50 text-xs whitespace-nowrap">— {r.name}, {r.vehicle}</span>
        </div>
        ))}
      </div>
    </div>

  </section>

  <!-- WHAT WE FIT OUT -->
  <section class="section-padding bg-background" id="services">
    <div class="container-narrow">
      <div class="text-center mb-16">
        <p class="text-sand-dark font-medium text-sm uppercase tracking-widest mb-3" data-animate="fade-in">What We Fit Out</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-charcoal" data-animate="fade-up">
          Custom fit-outs for 4WDs and vans
        </h2>
        <p class="text-muted-foreground mt-4 max-w-2xl mx-auto" data-animate="fade-up">
          Whether you're setting up a Troopy for a lap of Australia or converting a van into a home on wheels — we build expedition fit-outs that match exactly how you travel.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto" data-animate="stagger">
        <!-- 4WDs -->
        <div class="bg-white rounded-xl p-8 border border-stone-dark/10 hover:border-sand/40 transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 17h.01M16 17h.01M3 11l1.5-5h15l1.5 5M4 17h16a1 1 0 001-1v-5H3v5a1 1 0 001 1z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">4WD Fit-Outs</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">
            Patrols, Prados, Hiluxes and more. Custom cabinetry, drawer systems, sleeping platforms and storage — built to handle corrugations and serious off-road touring.
          </p>
        </div>

        <!-- Troopies -->
        <div class="bg-white rounded-xl p-8 border border-stone-dark/10 hover:border-sand/40 transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 17h.01M16 17h.01M3 11l1.5-5h15l1.5 5M4 17h16a1 1 0 001-1v-5H3v5a1 1 0 001 1z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 11V6h10v5" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">Troopy Fit-Outs</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">
            Land Cruiser 70 Series Troop Carriers. Full expedition builds with kitchens, sleeping setups, power systems and storage — purpose-built for long-range touring.
          </p>
        </div>

        <!-- Vans -->
        <div class="bg-white rounded-xl p-8 border border-stone-dark/10 hover:border-sand/40 transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 17h.01M16 17h.01M2 11V8a2 2 0 012-2h11l3 4h2a2 2 0 012 2v3M4 17h16a1 1 0 001-1v-2H3v2a1 1 0 001 1z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-charcoal mb-2">Van Conversions</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">
            Sprinters, HiAces, Transits and Crafters. Full conversions with kitchens, beds, water systems and off-grid power — designed to maximise every inch of space.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- HOW IT WORKS -->
  <section class="section-padding bg-stone" id="how-it-works">
    <div class="container-narrow">
      <div class="text-center mb-16">
        <p class="text-sand-dark font-medium text-sm uppercase tracking-widest mb-3" data-animate="fade-in">How It Works</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-charcoal" data-animate="fade-up">
          How your vehicle fit-out works
        </h2>
        <p class="text-muted-foreground mt-4 max-w-2xl mx-auto" data-animate="fade-up">
          From first conversation to hitting the road — four steps, no guesswork. You see the design before we build, so you know exactly what you're getting.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8" data-animate="stagger">
        <div class="text-center">
          <div class="w-14 h-14 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">1</div>
          <h3 class="font-bold text-charcoal mb-2">Free Consultation</h3>
          <p class="text-sm text-muted-foreground">Tell us about your vehicle, how you use it, and what you need. We'll figure out the best setup together — no cost, no commitment.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">2</div>
          <h3 class="font-bold text-charcoal mb-2">3D Design Preview</h3>
          <p class="text-sm text-muted-foreground">See your fit-out in full 3D before we cut a single piece. Adjust the layout, move things around, and approve the design when it's exactly right.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">3</div>
          <h3 class="font-bold text-charcoal mb-2">CNC Cut & Build</h3>
          <p class="text-sm text-muted-foreground">Every panel is CNC-cut from premium laminated plywood to millimetre precision, then hand-assembled in our Gold Coast workshop — lightweight, strong and built to handle Australian conditions.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">4</div>
          <h3 class="font-bold text-charcoal mb-2">Install & Go</h3>
          <p class="text-sm text-muted-foreground">We install everything, run you through the systems, and hand back the keys. You're ready to explore.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- WHY BUSHBOUND -->
  <section class="section-padding bg-background">
    <div class="container-narrow">
      <div class="text-center mb-16">
        <p class="text-sand-dark font-medium text-sm uppercase tracking-widest mb-3" data-animate="fade-in">Why Bushbound</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-charcoal" data-animate="fade-up">
          Why choose a professional vehicle fit-out
        </h2>
        <p class="text-muted-foreground mt-4 max-w-2xl mx-auto" data-animate="fade-up">
          DIY builds take months, generic off-the-shelf kits waste space, and cheap installs rattle themselves apart on corrugations. We design in 3D, CNC-cut every panel to millimetre precision, and build fit-outs made for your vehicle, your trip and your life.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-x-16 gap-y-10" data-animate="stagger">
        <div class="flex gap-4">
          <div class="w-10 h-10 bg-sand/20 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
            <svg class="w-5 h-5 text-sand-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-charcoal mb-1">3D Design Before We Build</h3>
            <p class="text-sm text-muted-foreground">Every fit-out starts with a full 3D render. You see the cabinetry, layout, and placement before we cut anything — so there are no surprises and no wasted money.</p>
          </div>
        </div>

        <div class="flex gap-4">
          <div class="w-10 h-10 bg-sand/20 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
            <svg class="w-5 h-5 text-sand-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0012 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 01-2.031.352 5.988 5.988 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 01-2.031.352 5.989 5.989 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971z" />
            </svg>
          </div>
