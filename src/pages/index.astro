  <script>
    import anime from 'animejs';

    (function() {
      const section = document.getElementById('hero');
      if (!section) return;
      let started = false;

      function startAnimation() {
        if (started) return;
        started = true;

        const tl = anime.timeline({ easing: 'easeOutCubic' });

        // Phase 1: Scene builds (0–3s)
        tl.add({ targets: '#vj-stars', opacity: [0, 0.5], duration: 2000, easing: 'easeInOutSine' }, 0);
        tl.add({ targets: '#vj-mountain-1', opacity: [0, 1], translateY: [60, 0], duration: 1800, easing: 'easeOutQuart' }, 300);
        tl.add({ targets: '#vj-mountain-2', opacity: [0, 1], translateY: [40, 0], duration: 1500, easing: 'easeOutQuart' }, 800);
        tl.add({ targets: '#vj-ground', opacity: [0, 1], duration: 1000, easing: 'easeOutQuad' }, 1400);
        // Back trees (distant, appear first)
        tl.add({ targets: '#vj-trees-back', opacity: [0, 1], duration: 600 }, 1800);
        tl.add({ targets: '#vj-trees-back .tree', opacity: [0, 1], delay: anime.stagger(80), duration: 500, easing: 'easeOutCubic' }, 1800);
        // Front trees (closer, slightly later)
        tl.add({ targets: '#vj-trees-front', opacity: [0, 1], duration: 600 }, 2200);
        tl.add({ targets: '#vj-trees-front .tree', opacity: [0, 1], delay: anime.stagger(80), duration: 600, easing: 'easeOutCubic' }, 2200);

        // Phase 2: Vehicle drives along mountain terrain (looping)
        setTimeout(startTerrainDrive, 3000);
      }

      function startTerrainDrive() {
        const path = document.getElementById('vj-drive-path') as unknown as SVGPathElement;
        const container = document.getElementById('vj-vehicle-container') as unknown as SVGGElement;
        const wheelRear = document.getElementById('vj-wheel-rear') as unknown as SVGGElement;
        const wheelFront = document.getElementById('vj-wheel-front') as unknown as SVGGElement;
        if (!path || !container) return;

        const totalLength = path.getTotalLength();
        const tripDuration = 18000;
        const pauseDuration = 1500;
        const cycleDuration = tripDuration + pauseDuration;
        let startTime: number | null = null;

        function animate(time: number) {
          if (startTime === null) startTime = time;
          const cycleTime = (time - startTime) % cycleDuration;

          if (cycleTime > tripDuration) {
            container.setAttribute('opacity', '0');
            requestAnimationFrame(animate);
            return;
          }

          container.setAttribute('opacity', '1');

          // easeInOutQuad for natural accel/decel
          let t = cycleTime / tripDuration;
          t = t < 0.5 ? 2 * t * t : 1 - Math.pow(-2 * t + 2, 2) / 2;

          const lengthAt = t * totalLength;
          const point = path.getPointAtLength(lengthAt);

          // Terrain angle from tangent
          const delta = 3;
          const p1 = path.getPointAtLength(Math.max(0, lengthAt - delta));
          const p2 = path.getPointAtLength(Math.min(totalLength, lengthAt + delta));
          const angle = Math.atan2(p2.y - p1.y, p2.x - p1.x) * (180 / Math.PI);

          container.setAttribute('transform',
            `translate(${point.x}, ${point.y}) rotate(${angle})`
          );

          // Spin wheels proportional to distance
          const wheelAngle = t * 360 * 25;
          if (wheelRear) wheelRear.style.transform = `rotate(${wheelAngle}deg)`;
          if (wheelFront) wheelFront.style.transform = `rotate(${wheelAngle}deg)`;

          requestAnimationFrame(animate);
        }

        requestAnimationFrame(animate);
      }

      startAnimation();
    })();
  </script>

  <!-- Hero: Shooting stars -->
  <script>
    (function() {
      const canvas = document.getElementById('vj-shooting-stars') as HTMLCanvasElement;
      if (!canvas) return;
      const ctx = canvas.getContext('2d')!;
      let animId: number;
      let running = false;

      interface ShootingStar {
        x: number; y: number; vx: number; vy: number;
        life: number; maxLife: number; size: number;
      }

      const shootingStars: ShootingStar[] = [];
      let nextShoot = 0;

      function resize() {
        const section = canvas.parentElement!;
        canvas.width = section.clientWidth;
        canvas.height = section.clientHeight;
      }

      function spawnShootingStar(time: number) {
        shootingStars.push({
          x: Math.random() * canvas.width * 0.7,
          y: Math.random() * canvas.height * 0.35,
          vx: Math.cos(Math.PI * 0.15 + Math.random() * 0.2) * (8 + Math.random() * 6),
          vy: Math.sin(Math.PI * 0.15 + Math.random() * 0.2) * (8 + Math.random() * 6),
          life: 0,
          maxLife: 40 + Math.random() * 30,
          size: 1.5 + Math.random() * 1.5,
        });
        nextShoot = time + 3000 + Math.random() * 4000;
      }

      function draw(time: number) {
        if (!running) return;
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        if (time > nextShoot) spawnShootingStar(time);

        for (let i = shootingStars.length - 1; i >= 0; i--) {
          const ss = shootingStars[i];
          ss.x += ss.vx; ss.y += ss.vy; ss.life++;
          const progress = ss.life / ss.maxLife;
          const alpha = progress < 0.1 ? progress * 10 : Math.max(0, 1 - (progress - 0.1) / 0.9);

          const hyp = Math.hypot(ss.vx, ss.vy);
          const tailX = ss.x - (ss.vx * 80 / hyp);
          const tailY = ss.y - (ss.vy * 80 / hyp);

          const grad = ctx.createLinearGradient(ss.x, ss.y, tailX, tailY);
          grad.addColorStop(0, `rgba(245, 240, 235, ${alpha * 0.9})`);
          grad.addColorStop(1, `rgba(245, 240, 235, 0)`);

          ctx.beginPath(); ctx.moveTo(ss.x, ss.y); ctx.lineTo(tailX, tailY);
          ctx.strokeStyle = grad; ctx.lineWidth = ss.size; ctx.lineCap = 'round'; ctx.stroke();

          ctx.beginPath(); ctx.arc(ss.x, ss.y, ss.size * 1.5, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(245, 240, 235, ${alpha * 0.6})`; ctx.fill();

          if (ss.life >= ss.maxLife) shootingStars.splice(i, 1);
        }
        animId = requestAnimationFrame(draw);
      }

      const section = canvas.parentElement!;
      const observer = new IntersectionObserver(([entry]) => {
        if (entry.isIntersecting && !running) {
          running = true; resize();
          nextShoot = performance.now() + 2000;
          animId = requestAnimationFrame(draw);
        } else if (!entry.isIntersecting && running) {
          running = false; cancelAnimationFrame(animId);
        }
      }, { threshold: 0.05 });

      window.addEventListener('resize', resize);
      observer.observe(section);
    })();
  </script>

